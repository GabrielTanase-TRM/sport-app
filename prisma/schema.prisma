model Users { 
  id    String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  email String  @unique
  firstName  String
  lastName  String
  password String
  disabled Boolean? @default(true)
  isTrainer Boolean
  deleted Boolean? @default(false)
  // data Data @relation(fields: [dataId], references: [id])
